					<wsu_themecontrol>
						<type>singleton</type>
						<class>wsu_themecontrol/observer</class>
						<method>hookTo_storeEdit</method>
					</wsu_themecontrol>
				</observers>
			</store_edit>
		</events>
	</adminhtml>
	<admin>
		<routers>
